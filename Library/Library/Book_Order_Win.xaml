        mc:Ignorable="d"
        Title="Book_Order_Win" Height="640" Width="500">
    <Grid Background="Lavender">
        <Label Content="Имя" FontSize="29" HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top"/>
        <Label Content="Фамилия" FontSize="29" HorizontalAlignment="Left" Margin="10,82,0,0" VerticalAlignment="Top"/>
        <Label Content="Номер телефона" FontSize="29" HorizontalAlignment="Left" Margin="10,136,0,0" VerticalAlignment="Top"/>
        <Label Content="email" FontSize="29" HorizontalAlignment="Left" Margin="10,190,0,0" VerticalAlignment="Top"/>
        <Label Content="Автор" FontSize="29" HorizontalAlignment="Left" Margin="10,244,0,0" VerticalAlignment="Top"/>
        <Label Content="Название" FontSize="29" HorizontalAlignment="Left" Margin="10,298,0,0" VerticalAlignment="Top"/>
        <Label Content="Количество" FontSize="29" HorizontalAlignment="Left" Margin="10,352,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Height="49" Margin="172,28,0,0" TextWrapping="Wrap" Text="" FontSize="29" VerticalAlignment="Top" Width="279"/>
        <TextBox x:Name="Surname" HorizontalAlignment="Left" Height="49" Margin="172,87,0,0" TextWrapping="Wrap" Text="" FontSize="29" VerticalAlignment="Top" Width="279"/>
        <TextBox x:Name="Phone_number" HorizontalAlignment="Left" Height="49" Margin="277,141,0,0" TextWrapping="Wrap" Text="" FontSize="26" VerticalAlignment="Top" Width="174"/>
        <TextBox x:Name="Email" HorizontalAlignment="Left" Height="49" Margin="133,195,0,0" TextWrapping="Wrap" Text="" FontSize="29" VerticalAlignment="Top" Width="318"/>
        <TextBox x:Name="Author" HorizontalAlignment="Left" Height="49" Margin="133,249,0,0" TextWrapping="Wrap" Text="" FontSize="29" VerticalAlignment="Top" Width="318"/>
        <TextBox x:Name="Title" HorizontalAlignment="Left" Height="49" Margin="172,303,0,0" TextWrapping="Wrap" Text="" FontSize="29" VerticalAlignment="Top" Width="279"/>
        <TextBox x:Name="Count" HorizontalAlignment="Left" Height="49" Margin="180,357,0,0" TextWrapping="Wrap" Text="" FontSize="29" VerticalAlignment="Top" Width="94"/>
        <Button Content="Заказать" FontSize="29" HorizontalAlignment="Left" Margin="159,534,0,0" VerticalAlignment="Top" Width="177" Height="50" Click="Click_Order"/>

    </Grid>
</Window>
