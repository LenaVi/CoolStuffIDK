        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Aqua">
    <Grid>
        <CheckBox x:Name="NoLog" Content="No Log" HorizontalAlignment="Left" Margin="100,66,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="Summary" Content="Summary" HorizontalAlignment="Left" Margin="100,106,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="Verbose" Content="Verbose" HorizontalAlignment="Left" Margin="100,143,0,0" VerticalAlignment="Top"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="440,143,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBox x:Name="txt" HorizontalAlignment="Left" Height="166" Margin="100,191,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="567"/>
    </Grid>
</Window>
